<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Name</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Book Name" name="name" value="<%= books.name %>" required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Author</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Book Author" name="author" value="<%= books.author %>" required>
              </div>
              <div class="form-group">
                <label for="PublishedTextField">Published</label>
                <input type="text" class="form-control" id="PublishedTextField"
                placeholder="Book Year Published" name="published" value="<%= books.published %>"  required>
              </div>
              <div class="form-group">
                <label for="DescriptionTextField">Description</label>
                <textarea type="text" class="form-control" id="DescriptionTextArea"
                placeholder="Book Description" name="description" required><%= books.description %>
                </textarea>
              </div>
              <div class="form-group">
                <label for="PriceTextField">Price</label>
                <input type="number" class="form-control" id="PriceTextField"
                placeholder="Book Price" step = "0.01" name="price" value="<%= books.price %>"  required>
              </div>
              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>
