<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <!-- ------------------------ -->
          <!-- FIX THE ADD BUTTON BELOW -->
          <!-- ------------------------ -->
          <a href="/books/details" class="btn btn-primary"><i class="fa fa-plus"></i> Add a book</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th class="text-center">Author</th>
                  <th class="text-center">Published</th>
                  <th class="text-center">Description</th>
                  <th class="text-center">Price</th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                <tr>
                  <td><%= books[count].name %></td>
                  <td class="text-center"><%= books[count].author %></td>
                  <td class="text-center"><%= books[count].published %></td>
                  <td class="text-center"><%= books[count].description %></td>
                  <td class="text-center">$<%= books[count].price %></td>

                  <td class="text-center">
                    <a href="/books/details/<%= books[count]._id %>" class="btn btn-primary"><i class="fa fa-edit"></i> Edit</a>
                  </td>

                  <td class="text-center">
                    <a href="/books/details/delete/<%= books[count]._id %>" class="btn btn-primary"><i class="fa fa-trash"></i> Delete</a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


